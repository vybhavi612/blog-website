<!-- Filename: views/home.ejs -->
<%- include("partials/header") %>

<div class="container">
  <a href="/compose" class="new-post-btn">+ New Post</a>

  <% if (posts.length === 0) { %>
    <p class="empty">No posts yet. Start by creating one!</p>
  <% } %>

  <% posts.forEach(post => { %>
    <div class="post-card">
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
      <div class="actions">
        <a href="/edit/<%= post.id %>">Edit</a>
        <form action="/delete/<%= post.id %>" method="POST">
          <button type="submit">Delete</button>
        </form>
      </div>
    </div>
  <% }) %>
</div>

<%- include("partials/footer") %>
